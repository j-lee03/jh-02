#!/bin/zsh

# 이 스크립트 파일이 있는 폴더(event_app)로 이동합니다.
DIR=$(dirname "$0")
cd "$DIR"

echo "=========================================="
echo "공연 확인 앱 서버를 시작합니다..."
echo "서버가 켜지는 3초 후에 웹 브라우저가 열립니다."
echo ""
echo "이 터미널 창을 닫으면 서버가 종료됩니다."
echo "=========================================="

# 3초 대기 (서버가 켜질 시간)
sleep 3

# 웹 브라우저에서 앱 주소 자동 열기
open http://127.0.0.1:5001

# 파이썬 앱 실행
python3 app.py